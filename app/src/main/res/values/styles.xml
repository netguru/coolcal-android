<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ToolbarNoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.EventPrimary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppTheme.EventSecondary">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppTheme.Weather">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
    </style>

    <style name="AppTheme.Weather.SmallText">
        <item name="android:textColor">@color/pale_blue</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppTheme.Weather.LargeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="AppTheme.Header">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.Header.LargeText">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="AppTheme.Header.HalfLargeText">
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="AppTheme.Header.SmallText">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
</resources>
