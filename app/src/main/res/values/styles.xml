<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ToolbarNoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.EventPrimary">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calendar_event_time_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppTheme.EventSecondary">
        <item name="android:textColor">@color/calendar_event_duration_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppTheme.Weather">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
    </style>

    <style name="AppTheme.Weather.DropShadow.SmallText">
        <item name="android:textColor">@color/pale_blue</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="AppTheme.Weather.DropShadow.LargeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="AppTheme.Weather.DropShadow">
        <item name="android:shadowColor">@color/weather_text_drop_shadow_color</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="AppTheme.Header">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppTheme.Header.LargeText">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="AppTheme.Tab">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Tab.LargeText" parent="AppTheme.Tab">
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="AppTheme.Tab.SmallText" parent="AppTheme.Tab">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="AppTheme.Header.SmallText">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppTheme.EventDetailLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="AppTheme.EventDetailIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.EventDetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>
